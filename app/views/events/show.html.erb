<div class="panel panel-primary" style= "background-color: WhiteSmoke;">
  <div class="panel-heading"><%= @event.name %></div>

  <div class="panel-body">

    <p>Event: <%= @event.name %></p>
    <p>Host: <%= @event.user.email %></p>


    <!-- About -->
    <h4>About</h4>
    <p><%= @event.description %></p>
    <p> Capacity: <%= @event.capacity %></p>
    <p> Location: <%= @event.location %></p>
    <p> Start time: <%= @event.starts_at %></p>
    <p> End time: <%= @event.ends_at %></p>

    <!-- Amenities -->
    <h4>What's on?</h4>
    <ul class="activities">
      <li><%= !@event.includes_food ? ("<s>Food included</s>").html_safe : "Food included" %></li>
      <li><%= !@event.includes_drinks ? ("<s>Kitchen</s>").html_safe : "Drinks included" %></li>
    </ul>

    <h4>Categories</h4>
      <% @categories.each do |category| %>
      <span class="label label-success"><%= category.name %></span>
    <% end %>

    <h4>Photos</h4>
      <% @event.photos.each do |photo| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= image_tag photo.image.thumbnail %>
        </div>
      </div>
    <% end %>

  </div>

</div>

<%= link_to "Back", events_path, class: "btn btn-default" %>
